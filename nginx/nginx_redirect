server {
    listen 80;
    server_name dex.tai.com.tr;

    return 301 https://$host$request_uri;

}


server {
    listen 443 ssl;
    server_name dex.tai.com.tr;

    ssl_certificate /etc/nginx/ssl/yildiz.crt;
    ssl_certificate_key /etc/nginx/ssl/yildiz.key;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    client_max_body_size 4096MB;

    location / {
        rewrite "^/$" https://dex.tai.com.tr/TAISTAGE/signin.jsp?dologin?reload/ permanent;
        proxy_pass https://SP01GNL0001.dmnint.intra:8443;
        proxy_ssl_trusted_certificate /etc/nginx/ssl/dmnintca.pem;
        proxy_ssl_verify on;
        proxy_ssl_verify_depth 2;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
